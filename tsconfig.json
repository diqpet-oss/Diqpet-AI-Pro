{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* 模块解析优化 */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true, // 建议添加，方便读取翻译/配置
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* 严谨性检查 - 预防 FAL_API_KEY 类型的错误 */
    "strict": true, 
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* 路径映射 */
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"] // 确保你的源码确实在 src 目录下
    },
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // 明确包含的文件范围
  "exclude": ["node_modules"]
}
